<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp">


    <RelativeLayout
        android:id="@+id/fixed"
        android:background="@drawable/rounder_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_132sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textSize="@dimen/_25sdp"
            android:text="@string/app_name"
            style="@style/txtFeatureStatus"/>

    </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/vhnumber"
            android:layout_height="@dimen/_36sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textAllCaps="true"
            android:inputType="textCapCharacters"
            android:layout_marginStart="@dimen/_20sdp"
            android:textColorHint="@color/text_hint"
            android:hint="@string/hint"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_5sdp"
            android:background="@drawable/rounder_edit_text"
            tools:ignore="RtlSymmetry,TextFields" />
    </RelativeLayout>

    <include
        layout="@layout/find_btn"/>


    <include
        layout="@layout/more_main_center"/>

</LinearLayout>